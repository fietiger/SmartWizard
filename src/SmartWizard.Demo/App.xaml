<prism:PrismApplication
    x:Class="SmartWizard.Demo.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:vm="clr-namespace:SmartWizard.Demo.ViewModels">
    <Application.Resources>
        <!--  Step1 的数据模板  -->
        <DataTemplate DataType="{x:Type vm:Step1ViewModel}">
            <StackPanel Margin="20">
                <TextBlock
                    Margin="0,0,0,20"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Text="请填写您的基本信息" />

                <Label Margin="0,0,0,5" Content="姓名:" />
                <TextBox
                    Margin="0,0,0,15"
                    Padding="8,5"
                    Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />

                <Label Margin="0,0,0,5" Content="邮箱:" />
                <TextBox
                    Margin="0,0,0,15"
                    Padding="8,5"
                    Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock
                    FontSize="12"
                    Foreground="Gray"
                    Text="请确保信息准确无误，这将用于后续的配置。"
                    TextWrapping="Wrap" />
            </StackPanel>
        </DataTemplate>

        <!--  Step2 的数据模板  -->
        <DataTemplate DataType="{x:Type vm:Step2ViewModel}">
            <StackPanel Margin="20">
                <TextBlock
                    Margin="0,0,0,20"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Text="请选择您的偏好设置" />

                <Label Margin="0,0,0,5" Content="语言:" />
                <ComboBox
                    Margin="0,0,0,15"
                    Padding="8,5"
                    ItemsSource="{Binding AvailableLanguages}"
                    SelectedItem="{Binding SelectedLanguage}" />

                <Label Margin="0,0,0,5" Content="主题:" />
                <ComboBox
                    Margin="0,0,0,15"
                    Padding="8,5"
                    ItemsSource="{Binding AvailableThemes}"
                    SelectedItem="{Binding Theme}" />

                <CheckBox
                    Margin="0,10,0,0"
                    Content="启用通知"
                    IsChecked="{Binding EnableNotifications}" />

                <TextBlock
                    Margin="0,15,0,0"
                    FontSize="12"
                    Foreground="Gray"
                    Text="这些设置可以在稍后的设置页面中修改。"
                    TextWrapping="Wrap" />
            </StackPanel>
        </DataTemplate>
    </Application.Resources>
</prism:PrismApplication>